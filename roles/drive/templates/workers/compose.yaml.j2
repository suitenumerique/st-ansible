---
{{ ansible_managed | comment }}

name: drive
services:
  worker:
    container_name: drive-worker
    image: docker.io/lasuite/drive-backend:{{ st_drive_tag }}
    env_file: ./env
    command: celery -A drive.celery_app worker --task-events --beat -l INFO -c $CELERY_CONCURRENCY -Q celery,default
    healthcheck:
      test: ["CMD-SHELL", "true"]
      interval: 1m
      timeout: 3s
      start_interval: 5s
