---
{{ ansible_managed | comment }}

name: messages
services:
  frontend:
    container_name: messages-frontend
    image: ghcr.io/suitenumerique/messages-frontend:{{ st_messages_tag }}
    env_file: ./frontend_env
    ports:
      - "8080:8080"
    healthcheck:
      test: ["CMD-SHELL", "true"]
      interval: 1m
      timeout: 3s
      start_interval: 5s

  backend:
    container_name: messages-backend
    image: ghcr.io/suitenumerique/messages-backend:{{ st_messages_tag }}
    env_file: ./backend_env
    healthcheck:
      test: ["CMD-SHELL", "true"]
      interval: 1m
      timeout: 3s
      start_interval: 5s
